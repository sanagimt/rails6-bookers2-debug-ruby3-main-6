<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @newbook %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
          <td>
          <% if @book.favorited_by?(current_user) %>
            <%= link_to book_favorite_path(@book), method: :delete do %>
            <span class="text-danger">♥<%= @book.favorites.count %></span>
          <% end %>
          <% else %>
            <%= link_to book_favorite_path(@book), method: :post do %>
            <span class="text-primary">♥<%= @book.favorites.count %></span>
          <% end %>
          <% end %>
          </td>
          <td>コメント数: <%= @book.book_comments.count %></td>
        </tr>
      </table>
      <div>
      <% @book.book_comments.each do |book_comment| %>
        <%= image_tag book_comment.user.get_profile_image, size:"100x100" %>
        <%= book_comment.comment %>
        <% if book_comment.user == current_user %>
        <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %></td>
        <% end %>
        <p><%= link_to(book_comment.user) do %>
        <%= book_comment.user.name %></p>
        <% end %>
      <% end %>
      </div>
      <div>
      <%= form_with model: [@book,@book_comment] do |f| %>
        <%= f.text_area :comment, rows:'5', style:'width: 100%', class: 'form-control book_body' %>
        <%= f.submit "送信" %>
      <% end %>
    </div>
  </div>
</div>